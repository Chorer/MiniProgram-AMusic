.blog {
  background-color: #fff;
  padding: 20rpx;
  padding-top: 30rpx;
}

.blog-title {
  display: flex;
}

.blog-title .blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-title .blog-box {
  flex: 1;
}

.blog-title .blog-name {
  font-size: 32rpx;
}

.blog-title .blog-time {
  font-size: 24rpx;
  color:#939393;
}

.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.blog-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #eee;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}
