/*容器*/
.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
}
/*博客卡片*/
.blog-card {
  margin-bottom: 20rpx;
}
/*评论tab*/
.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
.tab-item {
  color: #697480;
  font-size: 32rpx;
}
/*评论内容*/
.comment-list {
  background-color: #fff;
}
.comment {
  padding: 20rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}
.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
}
.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 4rpx 20rpx 0 0;
  float: left;
}
.comment-nickname {
  font-size: 30rpx;
  color: #294059;
}
.comment-text {
  margin: 5rpx 0 10rpx 84rpx;
}
.comment-time {
  font-size: 24rpx;
  color: #939393;
  margin-left: 84rpx;
}
/*评论和分享*/
.blog-ctrl {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid rgba(0,0,0,0.1);
  background-color: #fff;
}
.no-comment {
  text-align: center;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

