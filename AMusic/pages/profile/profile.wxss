page {
  background-color: #f1f1f1;
}

.profile-header {
  background-image: url(data:image/jpeg;base64,);
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0,0,0,0.3);
}

.avatar-url {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid #fff;
}
.nickname {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
}

.nav {
  overflow: hidden;
  margin: 50rpx 30rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  display: block;
}

.nav-item {
  background-color: #fff;
  min-height:100rpx;
  padding: 0 30rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .text {
  color: #808080;
  vertical-align:text-bottom;
}

.content .iconfont {
  color: #d43c33;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-xiangyou {
  color: #808080;
  font-size: 28rpx;
}