<!--components/lyric/lyric.wxml-->
<scroll-view class="lyric-scroll" scroll-y scroll-with-animation="true" scroll-top="{{scrollTop}}">
  <view class="lyric-panel">
    <block wx:for="{{lyricList}}" wx:key="item">
      <view class="lyric {{index == hightlightIndex ? 'hightlight-lyric':''}}">{{item.eachLyric}}</view>
    </block>
  </view>
</scroll-view>

