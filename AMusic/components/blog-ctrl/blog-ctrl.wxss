@import "iconfont.wxss";

.container {
  display: flex;
  background-color: #fff;
  padding:15rpx 0;
}

.control {
  flex: 1;
  color:rgba(40,47,60,0.8);
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.iconfont {
  margin-right:15rpx;
  font-weight: bold;
}

.iconfont,text {
  font-size: 32rpx;
}

.comment-content {
  width: 560rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.send {
  background-color: #d43c33;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.placeholder {
  font-size: 35rpx;
}

.share-btn {
  background-color: #fff;
  color: rgba(40,47,60,0.8);
  padding: 0;
  height: 100%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  display: none;
}

.share-hover::after{
  border: 0;
}





